  display: none;
.form-submitted
  font-weight: 600
  max-width: 50rem
  background-color: #C1FFE6
  padding: 0.3rem 0.5rem
  padding-top: 0.4rem
  margin-top: 1rem
  p
    margin: 0
    display: inline-block

hr
  background-color: section-line
  height: 1px
  border: none
    
.beta
  position: fixed
  right: 20px
  bottom: 15px
  z-index: 4
  display: inline-block
  background-color: beta
  font-size: 12px
  font-weight: bold
  padding: 4px 8px
  padding-bottom: 2px
  vertical-align: middle
  margin-left: 5px
  user-select: none
  
