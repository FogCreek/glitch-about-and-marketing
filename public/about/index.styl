sans-serif = "Benton Sans", Helvetica, Sans-serif
menlo = Menlo, Monaco, mono-space

primary = #222
secondary = #C3C3C3
tertiary = #9B9B9B
white-background = #fff
secondary-background = #83FFCD
primary-background = #FFD1C7 
link = #373FFF
header-blue = #373FFF
glitch-blue = #373FFF
glitch-lightblue = #9CE0FC
